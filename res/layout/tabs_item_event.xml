<?xml version="1.0" encoding="UTF-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

     <LinearLayout 
       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2894ff"
        >
        <Button 
            android:id="@+id/add_exam2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="考试"
            android:textSize="15sp"
            android:background="#2894ff"
            android:onClick="addEvents"
            />
        <ListView 
        android:id="@+id/exam_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
   
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#02c874"
        >
        <Button 
            android:id="@+id/add_homework2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="作业" 
            android:textSize="15sp"
            android:background="#02c874"
            android:onClick="addEvents"
            />
        <ListView 
        android:id="@+id/homework_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#009393"
        >
        <Button 
            android:id="@+id/add_habbit2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="习惯"
             android:textSize="15sp"
            android:background="#009393"
            android:onClick="addEvents"
            />
        <ListView 
        android:id="@+id/habbit_list2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
    
   
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#8cea00"
        >
        <Button 
            android:id="@+id/add_meetting2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="会议"
            android:textSize="15sp"
            android:background="#8cea00"
            android:onClick="addEvents"
            />
        <ListView 
        android:id="@+id/meetting_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
     
  
</LinearLayout> 